<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/padding4"
    tools:context=".CustomerCaravanViewActivity">

    <com.example.b00641907.mcnicholl_caravans.view.OpenSansBoldTextView
        android:id="@+id/tvCaravanTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding1"
        android:text="Caravan Title"
        android:textColor="@color/white"
        android:textSize="@dimen/font_5" />

    <com.example.b00641907.mcnicholl_caravans.view.OpenSansTextView
        android:id="@+id/tvCaravanDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding1"
        android:text="Event Details Here. Event Details Here. Event Details Here. Event Details Here.Event Details Here."
        android:textColor="@color/white"
        android:textSize="@dimen/font_8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/padding1"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.example.b00641907.mcnicholl_caravans.view.PageNavigator
            android:id="@+id/navigator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="@dimen/padding2" />
    </LinearLayout>

</LinearLayout>