<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding2"
    app:cardCornerRadius="@dimen/padding2"
    app:contentPadding="@dimen/padding1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.b00641907.mcnicholl_caravans.view.ResizableImageView
            android:id="@+id/ivCaravan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/padding1"
            android:padding="@dimen/padding1"
            android:background="@color/semiwhite"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/padding2"
                android:background="@drawable/selector_item_action_blue"
                android:padding="@dimen/padding2"
                android:src="@drawable/ic_item_edit" />

            <ImageView
                android:id="@+id/btnRemove"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/padding2"
                android:background="@drawable/selector_item_action_red"
                android:padding="@dimen/padding2"
                android:src="@drawable/ic_item_delete" />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>