<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding2"
    app:cardCornerRadius="@dimen/padding2"
    app:contentPadding="@dimen/padding2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivEvent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gas_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.example.b00641907.mcnicholl_caravans.view.OpenSansBoldTextView
                android:id="@+id/tvEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textColor="@color/app_grey_dark"
                android:textSize="@dimen/font_5" />

            <com.example.b00641907.mcnicholl_caravans.view.OpenSansTextView
                android:id="@+id/tvEventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding1"
                android:text="Event Time"
                android:textColor="@color/app_grey"
                android:textSize="@dimen/font_7" />

            <com.example.b00641907.mcnicholl_caravans.view.OpenSansTextView
                android:id="@+id/tvEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding1"
                android:text="Event Description"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/app_grey"
                android:textSize="@dimen/font_8" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/padding2"
                    android:background="@drawable/selector_item_action_blue"
                    android:padding="@dimen/padding2"
                    android:src="@drawable/ic_item_edit" />

                <ImageView
                    android:id="@+id/btnRemove"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/padding2"
                    android:background="@drawable/selector_item_action_red"
                    android:padding="@dimen/padding2"
                    android:src="@drawable/ic_item_delete" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>