<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding2"
    app:cardCornerRadius="@dimen/padding2"
    app:contentPadding="@dimen/padding2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGas"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_gas_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.example.b00641907.mcnicholl_caravans.view.OpenSansBoldTextView
                android:id="@+id/tvGasTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding2"
                android:paddingRight="@dimen/padding2"
                android:text="GAS Name Here"
                android:textColor="@color/app_grey"
                android:textSize="@dimen/font_3" />


            <com.example.b00641907.mcnicholl_caravans.view.OpenSansTextView
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding2"
                android:paddingRight="@dimen/padding2"
                android:text="Amount : "
                android:textColor="@color/app_grey"
                android:textSize="@dimen/font_6" />

            <com.example.b00641907.mcnicholl_caravans.view.OpenSansBoldTextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding2"
                android:paddingLeft="@dimen/padding2"
                android:paddingRight="@dimen/padding2"
                android:text="Price = 56GBP"
                android:textColor="@color/app_red"
                android:textSize="@dimen/font_5" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>